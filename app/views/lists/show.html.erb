<p>
  <strong>Title:</strong>
  <%= @list.title %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @list.description %>
</p>

<h2>Items</h2>
<% @list.items.each.do |item| %>
  <p>
    <strong>Title:</strong>
    <%= item.title %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= item.body %>
  </p>
<% end $>


<h2>Add an item:</h2>
<%= form_for([@list, @list.items.build]) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



<%= link_to 'Back', lists_path %>
| <%= link_to 'Edit', edit_list_path(@list) %>
